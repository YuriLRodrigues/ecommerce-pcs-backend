generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  user
}

model User {
  id        String   @id @default(uuid())
  avatar    String
  name      String
  username  String
  email     String   @unique
  password  String
  role      UserRole @default(user)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Images {
  id         String  @id @default(uuid())
  url        String
  products   Product @relation(fields: [productsId], references: [id])
  productsId String
}

model ProductFeedback {
  id        String   @id @default(uuid())
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
  stars     Float
  comment   String
  createdAt DateTime @default(now())
}

model ProductCategory {
  id        String   @id @default(uuid())
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
  name      String
  createdAt DateTime @default(now())
}

model Product {
  id           String            @id @default(uuid())
  name         String            @unique
  slug         String            @unique
  description  String
  price        Float
  onSale       Boolean
  salePrice    Float?
  feedback     ProductFeedback[]
  images       Images[]
  category     ProductCategory[]
  inStock      Boolean
  totalInStock Int
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}
